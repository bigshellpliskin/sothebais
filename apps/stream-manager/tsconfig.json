{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "verbatimModuleSyntax": false,
    "outDir": "dist",
    "composite": true,
    "declarationMap": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "rootDir": "../..",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 